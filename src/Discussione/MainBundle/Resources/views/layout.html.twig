{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@DiscussioneMainBundle/Resources/public/less/*' filter='less, cssrewrite' output='css/main.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
    {% endstylesheets %}
{% endblock %}

{% block headscripts %}
    {% javascripts '@DiscussioneMainBundle/Resources/public/js/*' output='js/libraries.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block javascripts %}
    {% javascripts '@DiscussioneDiscussionBundle/Resources/public/coffee/*' filter='coffee' output='js/main.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}