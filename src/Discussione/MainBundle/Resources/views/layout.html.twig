{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        '@DiscussioneMainBundle/Resources/css/*' filter='cssrewrite, ?yui_css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
    {% endstylesheets %}

    <link href="http://fonts.googleapis.com/css?family=Sanchez" rel="stylesheet" type="text/css">

    {% stylesheets
        '@DiscussioneMainBundle/Resources/css/*'
        '@DiscussioneMainBundle/Resources/less/*'
        '@DiscussioneDiscussionBundle/Resources/less/*'
            filter='less, cssrewrite, ?yui_css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
    {% endstylesheets %}
{% endblock %}

{% block headscripts %}
    <script src="//code.jquery.com/jquery-1.8.2.min.js" type="text/javascript"></script>

    {% javascripts '@DiscussioneMainBundle/Resources/js/css3-mediaqueries.js' filter='?yui_js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% javascripts '@DiscussioneMainBundle/Resources/js/*' filter='?yui_js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% javascripts
        '@DiscussioneDiscussionBundle/Resources/coffee/*' filter='coffee, ?yui_js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}