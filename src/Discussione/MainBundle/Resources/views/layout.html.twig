{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@DiscussioneMainBundle/Resources/less/*' filter='less, cssrewrite, ?yui_css' output='css/main.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
    {% endstylesheets %}
{% endblock %}

{% block headscripts %}
    {% javascripts '@DiscussioneMainBundle/Resources/js/*' filter='?yui_js' output='js/libraries.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block javascripts %}
    {% javascripts '@DiscussioneDiscussionBundle/Resources/coffee/*' filter='coffee, ?yui_js' output='js/main.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}